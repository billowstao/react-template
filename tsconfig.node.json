{
  "$schema": "https://json.schemastore.org/tsconfig.json",

  // Top Level
  "include": [
    "*.js",
    "*.mjs",
    "*.cjs",
    "*.ts",
    "*.mts",
    "*.cts",
    "./config/scripts/*.ts"
  ],

  "compilerOptions": {
    // Modules
    "module": "ESNext",
    "moduleResolution": "NodeNext",

    // JavaScript Support
    "allowJs": true,
    "checkJs": true,

    // Interop Constraints
    "allowSyntheticDefaultImports": true,

    // Language and Environment
    "target": "ESNext",

    // Projects
    "composite": true
  },

  // ts-node
  "ts-node": {
    "transpileOnly": true,
    "esm": true,
    "cwdMode": true,
    "experimentalResolver": true,
    "swc": true
  }
}
